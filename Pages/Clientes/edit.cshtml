@page
@model sitesite.Pages.Clientes.edit
@{
    ViewData["Title"] = "Atualizando cadastro de cliente";
}

<h1>@ViewData["Title"]</h1>

<form method="POST"> 
    <input type="hidden" name="id" value="@Model.cliente.Id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.cliente.Nome" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">E-mail</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.cliente.Email" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Fone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.cliente.Fone" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Endere√ßo</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="adress" value="@Model.cliente.Endereco" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Alterar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Clientes" role="button">Cancela</a>
        </div>
    </div>
</form>